{
  "name": "@nmeierpolys/mcp-structured-memory",
  "version": "0.1.4",
  "description": "A Model Context Protocol server that automatically maintains structured, domain-specific memory documents for focused projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-structured-memory": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "pre-release": "npm run test && npm run lint",
    "release:patch": "npm run pre-release && npm version patch && git push origin main && git push origin --tags && npm publish",
    "release:minor": "npm run pre-release && npm version minor && git push origin main && git push origin --tags && npm publish",
    "release:major": "npm run pre-release && npm version major && git push origin main && git push origin --tags && npm publish"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "markdown",
    "mcp-structured-memory",
    "ai",
    "claude"
  ],
  "author": "Nathaniel Meierpolys",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chokidar": "^4.0.3",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmeierpolys/mcp-structured-memory.git"
  },
  "bugs": {
    "url": "https://github.com/nmeierpolys/mcp-structured-memory/issues"
  },
  "homepage": "https://github.com/nmeierpolys/mcp-structured-memory#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}
