{
  "name": "mcp-structured-memory",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for managing structured, domain-specific memories as markdown files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-structured-memory": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "markdown",
    "mcp-structured-memory",
    "ai",
    "claude"
  ],
  "author": "Nathaniel Meierpolys",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chokidar": "^3.5.3",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmeierpolys/mcp-structured-memory.git"
  },
  "bugs": {
    "url": "https://github.com/nmeierpolys/mcp-structured-memory/issues"
  },
  "homepage": "https://github.com/nmeierpolys/mcp-structured-memory#readme"
}
